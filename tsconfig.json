{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "jsx": "react-jsx",
    "rootDir": "./src",
    "outDir": "./build",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true,
    "lib": ["ES2021.String", "DOM"]
  },
  "include": ["src/**/*"],
  "exclude": ["temp/*"]
}
